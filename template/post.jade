extends base

block title
	title=  post.title + " - " + site.title

block content
	.post.post-page
		h1.post-title= post.title
		.post-meta 发表于{{post.date.format('%Y年%m月%d日')}}&nbsp;阅读{{post.visits}}次
		.post-content
			if post.toc
				.affix
      				h4 目录
      				| {{ post.toc }}
      		| {{post.content}}

		if post.tags
			.tags
				for tag in post.tags
					a(href="/tag/{{tag}}")= tag

		include include/comments.jade
	script
		function addClass1(ele,cls) {
		  ele.className = cls;
		}
		addClass1(document.getElementById("nav_blog"), "current");
